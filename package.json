{
  "name": "leger",
  "version": "0.0.8",
  "description": "Lightweight Static Site Generator (SSG) built with Svelte & Vite",
  "type": "module",
  "main": "dist/cli/index.js",
  "files": [
    "dist"
  ],
  "bin": {
    "leger": "dist/cli/index.js"
  },
  "scripts": {
    "build": "npm run build:cli && npm run build:webcomponents && npm run build:styles",
    "build:cli": "vite build -c vite.config.cli.ts",
    "build:webcomponents": "vite build -c vite.config.webcomponents.ts",
    "build:styles": "sass src/styles/main.scss dist/components/style.css",
    "test": "node --experimental-test-module-mocks --import tsx --test './tests/**/*.spec.ts'",
    "format": "prettier . --write",
    "prepublishOnly": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ThibaudMZN/Leger.git"
  },
  "keywords": [
    "ssg",
    "svelte",
    "vite",
    "static",
    "leger"
  ],
  "author": "ThibaudMZN",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ThibaudMZN/Leger/issues"
  },
  "homepage": "https://github.com/ThibaudMZN/Leger#readme",
  "devDependencies": {
    "@types/node": "^24.1.0",
    "@sveltejs/vite-plugin-svelte": "^6.1.0",
    "prettier": "^3.6.2",
    "sass-embedded": "^1.89.2",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "vite": "^6.3.5"
  }
}
